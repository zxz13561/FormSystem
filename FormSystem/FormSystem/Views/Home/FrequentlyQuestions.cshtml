
@{
    ViewBag.Title = "FrequentlyQuestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Title-->
<div class="jumbotron">
    <h1>後台 - 常用問題管理</h1>
</div>
<hr />
<!--Edit Area-->
<!--Row 1-->
<div class="mb-3 row">
    <label for="inputTitle" class="col-sm-2 col-form-label">問題名稱</label>
    <div class="col-sm-6">
        <input type="password" class="form-control" id="inputTitle">
    </div>
</div>
<!--Row 2-->
<div class="mb-3 row">
    <label for="inputDescribe" class="col-sm-2 col-form-label">問題描述</label>
    <div class="col-sm-6">
        <input type="password" class="form-control" id="inputDescribe">
    </div>
</div>
<!--Row 3-->
<div class="mb-3 row">
    <label for="inputAns" class="col-sm-2 col-form-label">回答</label>
    <div class="col-sm-6">
        <input type="password" class="form-control" id="inputAns">
    </div>
    <label class="col-sm-3">(多個答案，請使用" ； "隔開)</label>
</div>
<!--Row 4-->
<div class="mb-3 row">
    <label for="selectType" class="col-sm-2 col-form-label">問題種類</label>
    <div class="col-sm-3">
        <select class="form-select" id="selectType">
            <option selected>請選擇</option>
            <option value="1">文字方塊(一般)</option>
            <option value="2">文字方塊(數字)</option>
            <option value="3">文字方塊(Email)</option>
            <option value="4">文字方塊(日期)</option>
            <option value="5">單選方塊</option>
            <option value="6">複選方塊</option>
        </select>
    </div>
    <div class="form-check col-sm-2">
        <input class="form-check-input" type="checkbox" value="" id="checkNullable">
        <label class="form-check-label" for="checkNullable">
            必填
        </label>
    </div>
    <div class="col-sm-1">
        <input class="btn btn-outline-primary" type="button" value="建立問題" id="btnSubmit">
    </div>
    <div class="col-sm-1">
        <input class="btn btn-outline-danger" type="button" value="清空欄位" id="btnClean">
    </div>
</div>
<hr />
<!--Table-->
<div>
    <input class="btn btn-outline-danger" type="button" value="刪除所選" id="btnDelete">
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">#</th>
            <th scope="col">問題名稱</th>
            <th scope="col">問題描述</th>
            <th scope="col">種類</th>
            <th scope="col">是否必填</th>
            <th scope="col">編輯</th>
        </tr>
    </thead>
    @{
        for (int i = 0; i <= 10; i++)
        {
            <tr>
                <th scope="row"><input type="checkbox" name="name" value="" /></th>
                <th scope="row">@i</th>
                <td>常用問題 @i</td>
                <td>None</td>
                <td>文字</td>
                <td><input type="checkbox" name="name" /></td>
                <td>Click</td>
            </tr>
        }
    }
    <tbody>
    </tbody>
</table>
