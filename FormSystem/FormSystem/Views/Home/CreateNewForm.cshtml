@model FormSystem.Models.CreateFormModel
@{
    ViewBag.Title = "EditForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Title-->
<div class="headTitle">
    <h1>後台 - 建立新表單</h1>
</div>
<hr />
<!--Edit Area-->
<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-info-tab" data-bs-toggle="tab" data-bs-target="#nav-Info" type="button" role="tab" aria-controls="nav-home" aria-selected="true">問卷</button>
        <button class="nav-link" id="nav-layout-tab" data-bs-toggle="tab" data-bs-target="#nav-Layout" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">問題</button>
        <button class="nav-link" id="nav-view-tab" data-bs-toggle="tab" data-bs-target="#nav-View" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">@Ajax.ActionLink("檢視表單", "ShowForm", new AjaxOptions { UpdateTargetId="reviewForm", Url = Url.Action("ShowForm")})  </button>        
    </div>
</nav>
<!--Page Start Here-->
<div class="tab-content" id="nav-tabContent">
    <!--問卷-->
    <div class="tab-pane fade show active" id="nav-Info" role="tabpanel" aria-labelledby="nav-home-tab">
        <p><!--排版用--></p>
        @{Html.RenderPartial("../PartialView/_NewInfo", this.Model.mInfo);}
    </div>
    <!--問題-->
    <div class="tab-pane fade" id="nav-Layout" role="tabpanel" aria-labelledby="nav-profile-tab">
        <p><!--排版用--></p>
        <div class="mb-3 row">
            <label for="selectType" class="col-sm-1 col-form-label" style="text-align:right">種類:</label>
            <div class="col-sm-3">
                <select class="form-select" id="selectType">
                    <option selected>請選擇</option>
                    <option value="0">自訂問題</option>
                    <!--預設問題放這裡-->
                </select>
            </div>
        </div>
        @{Html.RenderPartial("../PartialView/_NewLayout", this.Model.mLayout);}
    </div>
    <!--檢視表單-->
    <div class="tab-pane fade" id="nav-View" role="tabpanel" aria-labelledby="nav-contact-tab">
        <p></p>
        <div id="reviewForm"></div>
        <!--確認送出-->
        <hr />
        <div>
            <button class="btn btn-outline-warning">
                @Ajax.ActionLink("送出", "InsertIntoDB", new AjaxOptions { Url = Url.Action("InsertIntoDB") })
            </button>
        </div>
    </div>
</div>