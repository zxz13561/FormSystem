@model FormSystem.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>管理員登入</h2>
<p>@ViewBag.Message</p>

@using (Html.BeginForm())
    {
        <div class="container d-grid gap-2">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-4">
                @Html.TextBoxFor(login => login.UserName, new { @class = "form-control me-2", placeholder = "輸入帳號" })
            </div>
            <div class="form-group col-4">
                @Html.PasswordFor(login => login.Password, new { @class = "form-control me-2", placeholder = "輸入密碼" })
            </div>
            <div class="col-4"></div>
            <div class="col-8">
                <button class="btn btn-outline-success" type="submit">登入</button>
                <button class="btn btn-outline-warning">忘記密碼</button>
            </div>
        </div>
    }


