
@{
    ViewBag.Title = "FormManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Title-->
<div class="jumbotron">
    <h1>後台 - 問卷管理</h1>
</div>
<hr />
<!--Search Area-->
<div class="container">
    <div class="row row-cols-3">
        <div class="col">
            <input class="form-control me-2" type="search" placeholder="搜尋問卷標題" aria-label="Search">
        </div>
        <div class="col"></div>
        <div class="col"></div>
        <div class="col">
            開始時間:
            <input class="form-control me-2" type="date">
        </div>
        <div class="col">
            結束時間:
            <input class="form-control me-2" type="date" placeholder="結束時間" aria-label="Search">
        </div>
        <div class="col">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </div>
    </div>
</div>
<hr />
<!--Function List-->
<div class="row">
    @Html.ActionLink("新增表單", "EditForm", "Home", new { @id = "NewForm" }, new { @class = "btn btn-secondary" }))
</div>
<hr />
<!--Form List-->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">#</th>
            <th scope="col">問卷名稱</th>
            <th scope="col">狀態</th>
            <th scope="col">開始時間</th>
            <th scope="col">結束時間</th>
            <th scope="col">統計</th>
        </tr>
    </thead>
    @{
        for (int i = 0; i <= 10; i++)
        {
            <tr>
                <th scope="row"><input type="checkbox" value="" /></th>
                <th scope="row">@i</th>
                <td>@Html.ActionLink("表單" + i, "FillForm", "Home", new { id = "TestID" + i }, null)</td>
                <td>None</td>
                <td>2021/01/01</td>
                <td>2021/12/31</td>
                <td>Click</td>
            </tr>
        }
    }
    <tbody>
    </tbody>
</table>
