@model FormSystem.Models.CreateFormModel
@{
    ViewBag.Title = "EditForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Title-->
<div class="jumbotron">
    <h1>後台 - 編輯</h1>
</div>
<hr />
<!--Edit Area-->
<p>@this.Model.mInfo.FormID.ToString()</p>
<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-Form" type="button" role="tab" aria-controls="nav-home" aria-selected="true">問卷</button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-Questions" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">問題</button>
        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-Data" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">填寫資料</button>
        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-Analysis" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">統計</button>
    </div>
</nav>
<!--Page Start Here-->
<div class="tab-content" id="nav-tabContent">
    <!--問卷-->
    <div class="tab-pane fade show active" id="nav-Form" role="tabpanel" aria-labelledby="nav-home-tab">
        <p><!--排版用--></p>
        @using (Html.BeginForm("EditFormInfo", "Home", FormMethod.Post))
        {
            <div class="mb-3 row">
                <label for="FormName" class="col-sm-1 col-form-label">問卷名稱:</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(info => this.Model.mInfo.Name, new { @class = "form-control", @id = "FormName" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="FormDescript" class="col-sm-1 col-form-label">問卷描述:</label>
                <div class="col-sm-6">
                    @Html.TextAreaFor(info => this.Model.mInfo.Body, new { @class = "form-control", @id = "FormDescript", @rows = "3" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="StartDate" class="col-sm-1 col-form-label">開始時間:</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(info => this.Model.mInfo.StartDate, new { @class = "form-control", @id = "StartDate", @type = "date" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="EndDate" class="col-sm-1 col-form-label">結束時間:</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(info => this.Model.mInfo.EndDate, new { @class = "form-control", @id = "EndDate", @type = "date" })
                </div>
            </div>
            <div class="row">
                <div class="col-5"></div>
                <div class="col-1"><button class="btn btn-outline-danger" type="reset">取消</button></div>
                <div class="col-1"><button class="btn btn-outline-success" type="submit">送出</button></div>
            </div>
        }
    </div>
    <!--問題-->
    <div class="tab-pane fade" id="nav-Questions" role="tabpanel" aria-labelledby="nav-profile-tab">
        <p><!--排版用--></p>
        @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "LayoutForm" }))
        {
            <div class="mb-3 row">
                <label for="selectType" class="col-sm-1 col-form-label" style="text-align:right">種類:</label>
                <div class="col-sm-3">
                    <select class="form-select" id="selectType">
                        <option selected>請選擇</option>
                        <option value="1">自訂問題</option>
                        <!--預設問題放這裡-->
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputDescribe" class="col-sm-1 col-form-label" style="text-align:right">問題:</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(layout => this.Model.mLayout.Body, new { @class = "form-control", @id = "inputDescribe" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputAns" class="col-sm-1 col-form-label" style="text-align:right">回答:</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(layout => this.Model.mLayout.Answer, new { @class = "form-control", @id = "inputAns" })
                </div>
                <label class="col-sm-3">(多個答案，請使用" ； "隔開)</label>
            </div>
            <div class="mb-3 row">
                <label for="selectType" class="col-sm-1 col-form-label" style="text-align:right">問題種類:</label>
                <div class="col-sm-3">
                    @Html.DropDownListFor(layout => this.Model.mLayout.QuestionType, (IEnumerable<SelectListItem>)ViewBag.SelectList, new { @class = "form-select", @id = "selectType" })
                </div>
                <div class="form-check col-sm-2">
                    @Html.CheckBoxFor(layout => this.Model.mLayout.NeedAns, new { @class = "form-check-input", @type = "checkbox", @id = "checkNullable" })
                    <label class="form-check-label" for="checkNullable">
                        必填
                    </label>
                </div>
            </div>
        }
            <div class="row">
                <div class="col-sm-8"></div>
                <div class="col-sm-1">
                    <input class="btn btn-outline-primary" type="submit" value="加入" id="btnSubmit">
                </div>
                <div class="col-sm-1">
                    <input class="btn btn-outline-danger" type="button" value="清空" id="btnClean">
                </div>
                <div class="col-sm-2"></div>
            </div>
            <hr />
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col" class="col-1"></th>
                        <th scope="col" class="col-1">#</th>
                        <th scope="col">問題</th>
                        <th scope="col" class="col-2">種類</th>
                        <th scope="col" class="col-1">必填</th>
                        <th scope="col" class="col-1"></th>
                    </tr>
                </thead>
                <tbody id="qTable">
                    <!--問題列表-->
                    @Html.Partial("../PartialView/_LayoutTable")
                </tbody>
            </table>
    </div>
    <!--資料-->
    <div class="tab-pane fade" id="nav-Data" role="tabpanel" aria-labelledby="nav-contact-tab">
        <p></p>
        <button class="btn btn-primary">匯出</button>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" class="col-1">#</th>
                    <th scope="col">名稱</th>
                    <th scope="col" class="col-2">建立時間</th>
                    <th scope="col" class="col-1">觀看細節</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <!--統計-->
    <div class="tab-pane fade" id="nav-Analysis" role="tabpanel" aria-labelledby="nav-contact-tab">

    </div>
</div>

<script>
    $(function () {
        $('#btnSubmit').click(function (event) {
            var valdata = $("#LayoutForm").serialize();
            var div = $('#nav-Questions').html();
            alert(valdata);
            $.ajax({
                url: "/Home/EditFormLayout",
                type: "POST",
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: valdata,
                success: function (result) {
                    //$('#qTable').append(result);
                    $('#qTable').load("../../PartialView/_LayoutTable");
                }
            });
        });
    });
</script>
